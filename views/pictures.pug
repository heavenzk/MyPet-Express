extends layout

block content
	h1.font-weight-light.text-center.text-lg-left.mt-4.mb-0 Pets Gallery
	hr.mt-2.mb-5
	.row.text-center.text-lg-left
		each pet in petsInfo
			each petImage in pet.images
				.col-lg-3.col-md-4.col-12
					a.d-block.mb-4.h-100(href='#', data-toggle='modal', data-target='.bd-example-modal-xl', data-pet=pet, data-petimage=petImage)
						img.img-fluid.img-thumbnail(src=petImage, alt='pet.name')
	
	// Modal
	.bd-example-modal-xl.modal.fade(tabindex='-1', role='dialog', aria-labelledby='exampleModalLabel', aria-hidden='true')
		.modal-dialog.modal-xl(role='document')
			.modal-content
				.modal-header
					h5#exampleModalLabel.modal-title Pet name
					button.close(type='button', data-dismiss='modal', aria-label='Close')
						span(aria-hidden='true') Ã—
				.modal-body
					img(src="", alt="", height="100%", width="100%")



	